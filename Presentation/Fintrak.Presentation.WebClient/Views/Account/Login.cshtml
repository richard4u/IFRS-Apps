@model Fintrak.Presentation.WebClient.Models.AccountLoginModel

@{
    ViewBag.Title = "Account Login";
    Layout = "~/Views/Shared/_LoginLayoutPage.cshtml";
}

@section scripts
{
    <script src="@Url.Content("~/app/core/models/account/account-login-model.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/app/core/controllers/account/account-login-controller.js")" type="text/javascript"></script>
}

<div class="wrapper full-page-wrapper page-auth page-login text-center" data-ng-controller="AccountLoginController as vm" ng-init="returnUrl = '@Model.ReturnUrl'">
    <div class="inner-page">
        <div class="logo">
            <a href="#"><img src="~/app/assets/img/LOGO_ent.png" alt="" /></a>
        </div>
        @*<button type="button" class="btn btn-auth-facebook"><span>Login via Facebook</span></button>
            <div class="separator"><span>OR</span></div>*@
        <div class="login-box center-block">
            <form class="form-horizontal" role="form">
                <p class="title">Use your Tenant ID, username &amp; password</p>
                <div class="form-group">
                    <label for="username" class="control-label sr-only">Company</label>
                    <div class="col-sm-12">
                        <div class="input-group">
                            <input type="text" placeholder="tenantID" id="company" data-ng-model="vm.accountModel.CompanyCode" class="form-control" autocomplete="off">
                            <span class="input-group-addon"><i class="fa fa-home fa-fw"></i></span>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label for="username" class="control-label sr-only">Username</label>
                    <div class="col-sm-12">
                        <div class="input-group">
                            <input type="text" placeholder="username" id="username" data-ng-model="vm.accountModel.LoginID" class="form-control" autocomplete="off">
                            <span class="input-group-addon"><i class="fa fa-user fa-fw"></i></span>
                        </div>
                    </div>
                </div>
                <label for="password" class="control-label sr-only">Password</label>
                <div class="form-group">
                    <div class="col-sm-12">
                        <div class="input-group">
                            <input type="password" placeholder="password" id="passwordview" data-ng-model="vm.accountModel.Password" class="form-control" autocomplete="off">
                            <span class="input-group-addon" id="icontoggle" style="cursor:pointer;" ng-click="vm.seepassword()"><i class="fa fa-eye-slash fa-fw"></i></span>
                        </div>
                    </div>
                </div>
                @*<label class="fancy-checkbox">
                        <input type="checkbox" name="chkRememberMe" data-ng-model="vm.accountModel.RememberMe">
                        <span>Remember me next time</span>
                    </label>*@
                <button class="btn btn-custom-primary btn-lg btn-block btn-auth" data-ng-click="vm.login(vm.accountModel.LoginID)"><i class="fa fa-arrow-circle-o-right"></i> Login</button>
            </form>
            <div class="links">
                @*<p><a href="@Url.Action("Forgotpassword", "Account")">Forgot Username or Password?</a></p>*@
                @*<p><a href="#">Forgot Username or Password?</a></p>*@
                @*<p><a href="#">Create New Account</a></p>*@
                <p><a href="#" ng-click="vm.changepasswordmodal()">Forgot Username or Password?</a></p>
            </div>
            <div id="myModal" class="modal">

                <!-- Modal content -->
                <div class="modal-content">
                    <span class="close">&times;</span>
                    <h4>Please Contact Your Admin to reset your Password...</h4>
                </div>

            </div>
        </div>
    </div>
</div>



