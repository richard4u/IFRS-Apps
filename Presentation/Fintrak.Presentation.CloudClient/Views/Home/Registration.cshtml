@{
    ViewBag.Title = "Registration";
}

@section scripts
{
    <script src="~/Binding/ViewModels/RegistrationController.js"></script>
}

@section footerScripts
{
   
}

<div  id="registration" data-ng-controller="RegistrationController">
    <!-- page content wrapper -->
    <div class="page-content-wrap bg-light">
        <!-- page content holder -->
        <div class="page-content-holder no-padding">
            <!-- page title -->
            <div class="page-title">
                <h1>Company Registration</h1>
                <!-- breadcrumbs -->
                <ul class="breadcrumb">
                    <li><a href="index.html">Home</a></li>
                  
                    <li class="active">Company Registration</li>
                </ul>
                <!-- ./breadcrumbs -->
            </div>
            <!-- ./page title -->
        </div>
        <!-- ./page content holder -->
    </div>
    <!-- ./page content wrapper -->
  
    <!-- page content wrapper -->
    <div class="page-content-wrap">

        <div class="divider"><div class="box"><span class="fa fa-angle-down"></span></div></div>

        <!-- page content holder -->
        <div class="page-content-holder">

            <div class="row">
                <div class="col-md-7 this-animate" data-animate="fadeInLeft">

                    <div class="text-column">
                        <h4>Try our Performance Insight (PI360)</h4>
                        <div class="text-column-info">
                            The #1 Financial Enterprise Solution.It is flexible and evolving.It will work for you. Now and forever.
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Code <span class="text-hightlight">*</span></label>
                                <input type="text" class="form-control" ng-model="company.Code" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Name <span class="text-hightlight">*</span></label>
                                <input type="text" class="form-control" ng-model="company.Name" />
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Country <span class="text-hightlight">*</span></label>
                                <input type="text" class="form-control" ng-model="company.Country" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Phone <span class="text-hightlight">*</span></label>
                                <input type="text" class="form-control" ng-model="company.Phone" />
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Email <span class="text-hightlight">*</span></label>
                                <input type="text" class="form-control" ng-model="company.Email" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Website </label>
                                <input type="text" class="form-control" ng-model="company.Website" />
                            </div>
                        </div>
                        <div class="col-md-12">
                            
                            <div class="form-group">
                                <label>Address <span class="text-hightlight">*</span></label>
                                <textarea class="form-control" rows="8" ng-model="company.Address"></textarea>
                            </div>

                            <div class="form-group">
                                <label>Message </label>
                                <textarea class="form-control" rows="8" ng-model="company.Message"></textarea>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group">
                                <label>Contact Name <span class="text-hightlight">*</span></label>
                                <input type="text" class="form-control" ng-model="company.ContactName" />
                            </div>
                            <div class="form-group">
                                <label>Contact Phone <span class="text-hightlight">*</span></label>
                                <input type="text" class="form-control" ng-model="company.ContactPhone" />
                            </div>
                            <div class="form-group">
                                <label>Contact Email <span class="text-hightlight">*</span></label>
                                <input type="text" class="form-control" ng-model="company.ContactEmail" />
                            </div>
                            <button class="btn btn-primary btn-lg pull-right" ng-click="register()">Register</button>
                        </div>
                    </div>

                </div>
                <div class="col-md-5 this-animate" data-animate="fadeInRight">

                    <div class="text-column text-column-centralized">
                        <div class="text-column-icon">
                            <span class="fa fa-home"></span>
                        </div>
                        <h4>Our Office</h4>
                        <div class="text-column-info">
                            <p><strong><span class="fa fa-map-marker"></span> Address: </strong> 144A, Gbagada Express Way,Lagos Nigeria</p>
                            <p><strong><span class="fa fa-phone"></span> Phone: </strong> +(234) 8022230884</p>
                            <p><strong><span class="fa fa-envelope"></span> E-mail: </strong> <a href="#">support@fintraksoftware.com</a></p>
                        </div>
                    </div>

                    <div class="text-column text-column-centralized">
                        <div class="text-column-icon">
                            <span class="fa fa-clock-o"></span>
                        </div>
                        <h4>Bussines Hours</h4>
                        <div class="text-column-info">
                            <p><strong>Monday &mdash; Friday</strong>: 10:00am - 6:00pm</p>
                            <p><strong>Saturday &mdash; Sunday</strong>: 10:00am - 2:00pm</p>
                        </div>
                    </div>

                </div>
            </div>

        </div>
        <!-- ./page content holder -->
    </div>
    <!-- ./page content wrapper -->
</div>
